doctype html
html(lang='en')
	head
		title= title
		link(rel='stylesheet', href='/lib/bootstrap/bootstrap.min.css')
		link(rel='stylesheet', href='/lib/fontawesome/css/font-awesome.min.css')
		link(rel='stylesheet', href='/statics/css/posts.css')
	body
		div(class='container')
			div(class='row')
				div(class='hidden-xs col-sm-1 col-md-2 col-lg-4')
				div(class='col-xs-24 col-sm-22 col-md-20 col-lg-16')
					div(class='header')
						span(class='nav hidden-xs pull-right')
							a(href='/') About 
							a(href='/') Notes
							a(href='/signout')
						span(class='title')
							a(href='/posts' class='special-font') Random Bits
								i(class='fa fa-random')
							br/
							span(class='subtitle text-left') From a Father, Developer, DIY Enthusiast
				div(class='hidden-xs col-sm-1 col-md-2 col-lg-4')

			div(class='row content')
				div(class='hidden-xs col-sm-1 col-md-2 col-lg-4')
				div(class='col-xs-24 col-sm-22 col-md-20 col-lg-16')
					block content
				div(class='hidden-xs col-sm-1 col-md-2 col-lg-4')
		
			include ../partials/posts-footer