doctype html
html(lang='en')
	head
		title= title
		link(rel='stylesheet', href='/lib/bootstrap/bootstrap.min.css')
		link(rel='stylesheet', href='/statics/css/posts.css')
	body
		div(class='container')
			div(class='row')
				div(class='hidden-xs col-sm-4 col-md-4')
				div(class='col-xs-24 col-sm-16 col-md-16')
					div(class='header')
						span(class='nav hidden-xs pull-right')
							a(href='/') About 
							a(href='/') Notes
							a(href='/signout')
						span(class='title')
							a(href='/posts' class='special-font') Random Bits
							br/
							span(class='subtitle text-left') From a Father, Developer, DIY Enthusiast

			div(class='row content')
				div(class='hidden-xs col-sm-4 col-md-4')
				div(class='col-xs-24 col-sm-16 col-md-16')
					block content