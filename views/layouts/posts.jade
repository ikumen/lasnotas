doctype html
html(lang='en')
	head
		title= title
		link(rel='stylesheet', href='/lib/bootstrap/css/bootstrap.min.css')
		link(rel='stylesheet', href='/lib/fontawesome/css/font-awesome.min.css')
		link(rel='stylesheet', href='/statics/css/posts.css')
	body
		div(class='container')
			div(class='row')
				div(class='hidden-xs col-sm-1 col-md-1 col-lg-4')
				div(class='col-xs-24 col-sm-22 col-md-22 col-lg-16')
					div(class='header')
						if(authUser && user && (authUser.id === user.id))
							span(class='nav pull-right')
								a(href='/notes/' title='Add Note') Add&nbsp;
								small(style="color: #ddd") |&nbsp;
								a(href='/signout' title='Sign Out') 
									i(class="fa fa-sign-out")
						span(class='title')
							a(href='/@#{user.name}' class='special-font') Random Bits 
							br/
							span(class='hidden-xs subtitle text-left') From a Father, Developer, DIY Enthusiast
				div(class='hidden-xs col-sm-1 col-md-1 col-lg-4')

			div(class='row content')
				div(class='hidden-xs col-sm-1 col-md-1 col-lg-4')
				div(class='col-xs-24 col-sm-22 col-md-22 col-lg-16')
					block content
				div(class='hidden-xs col-sm-1 col-md-1 col-lg-4')
		
			include ../partials/posts-footer