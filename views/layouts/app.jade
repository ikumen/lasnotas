- var userName = (user.name || user.id)

doctype html
html(lang='en' data-ng-app="lasnotas")
	head
		title= title
		link(rel='stylesheet', href='/lib/bootstrap/bootstrap.min.css')
		link(rel='stylesheet', href='/lib/animate.css/animate.min.css')
		link(rel='stylesheet', href='/lib/fontawesome/css/font-awesome.min.css')
		link(rel="stylesheet" href="/lib/highlight.js/styles/github.css")
		link(rel='stylesheet', href='/statics/css/app.css')

	body
		block content

		div(class="container-fluid")
			div(class="row")
				div(class="col-xs-24 footer")
					| &copy; 2014 
					a(href='/@#{userName}') Thong Nguyen
					span(class='pull-right')
						| <a href="/#about">About</a> this <a href="http://en.wikipedia.org/wiki/MEAN">MEAN</a>-ingful app

		script(type='text/javascript')
			| var _currentUserName_ = '@#{userName}'

		include ../partials/app-scripts