doctype html
html(lang='en')
	head
		title= title
		link(rel='stylesheet', href='/lib/bootstrap/css/bootstrap.min.css')
		link(rel='stylesheet', href='/lib/fontawesome/css/font-awesome.min.css')
		link(rel='stylesheet', href='/statics/css/posts.css')
		link(rel="stylesheet", href="/lib/highlight.js/styles/github.css" type='text/css')
	body
		div(class='container')
			div(class='row')
				div(class='hidden-xs col-sm-1 col-md-1 col-lg-4')
				div(class='col-xs-24 col-sm-22 col-md-22 col-lg-16')
					div(class='post-header')
						if(authUser && (authUser.id === post.userId))
							span(class="pull-right")
								a(href="/notes/#/#{post.id}" title="Edit this Note") Edit&nbsp;
								small(style="color: #ddd") | &nbsp;
								a(href="/signout" title="Sign Out")
									i(class="fa fa-sign-out")
						a(href='/@#{user.name}') Random Bits
						span
							|  | #{user.fullName} on 
							=moment(post.post.date).format('MMM DD, YYYY') 
				div(class='hidden-xs col-sm-1 col-md-1 col-lg-4')

			div(class='row content')
				div(class='hidden-xs col-sm-1 col-md-1 col-lg-4')
				div(class='col-xs-24 col-sm-22 col-md-22 col-lg-16')
					block content
				div(class='hidden-xs col-sm-1 col-md-1 col-lg-4')
		
			include ../partials/posts-footer