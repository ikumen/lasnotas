doctype html
html(lang='en')
	head
		title= title
		link(rel='stylesheet', href='/lib/bootstrap/css/bootstrap.min.css')
		link(rel='stylesheet', href='/lib/fontawesome/css/font-awesome.min.css')
		link(rel='stylesheet', href='/statics/css/posts.css')
		link(rel="stylesheet", href="/lib/highlight.js/styles/github.css" type='text/css')
	body
		div(class='container')
			div(class='row')
				div(class='hidden-xs col-sm-1 col-md-1 col-lg-3')
				div(class='col-xs-24 col-sm-22 col-md-22 col-lg-18')
					span(class='post-header')
						a(href='/@#{user.name}') Random Bits
						small
							|  | #{user.fullName} on 
							=moment(post.publishedAt).format('MMM DD, YYYY') 
				div(class='hidden-xs col-sm-1 col-md-1 col-lg-3')

			div(class='row content')
				div(class='hidden-xs col-sm-1 col-md-1 col-lg-3')
				div(class='col-xs-24 col-sm-22 col-md-22 col-lg-18')
					block content
				div(class='hidden-xs col-sm-1 col-md-1 col-lg-3')
		
			include ../partials/posts-footer